<?xml version="1.0" encoding="utf-8"?>
<s:Skin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:supportClasses="com.anjantek.controls.sliders.supportClasses.*">

	<fx:Metadata>
		[HostComponent("com.anjantek.controls.sliders.supportClasses.SliderThumb")]
	</fx:Metadata>

	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="disabled" />
	</s:states>

	<s:HGroup id="group_add_delete" gap="3"
			  left="-30"
			  top="1" bottom="1"
			  verticalCenter="0"
			  horizontalAlign="center" verticalAlign="middle"
			  visible="false" visible.over="true">

		<s:Button id="removeThumb"
				  width="12" height="12" skinClass="com.anjantek.controls.sliders.skins.thumb.RemoveThumbButtonSkin" />

		<s:Button id="addThumb"
				  width="12" height="12" skinClass="com.anjantek.controls.sliders.skins.thumb.AddThumbButtonSkin" />
	</s:HGroup>

    <s:Button id="button" top="0"
              horizontalCenter="0" verticalCenter="0"
              width="40" height="20"
              skinClass="com.anjantek.controls.sliders.skins.thumb.VSliderThumbButtonSkin" />

    <!--Shows the thumb's value on the slider.-->
    <s:Group id="group_label"
             left="{button.width + 30}" top="0" bottom="0"
             verticalCenter="0" alpha.disabled="0.5">

        <s:Rect top="0" left="0" right="0" bottom="0">
            <s:fill>
                <s:SolidColor color="0x000000" alpha=".9"/>
            </s:fill>
            <s:filters>
                <s:DropShadowFilter angle="0" color="0x999999" distance="3"/>
            </s:filters>
        </s:Rect>

        <s:Label id="label"
                 horizontalCenter="0" verticalCenter="1"
                 left="5" right="5" top="5" bottom="5"
                 textAlign="center" verticalAlign="middle"
                 fontWeight="normal" color="white" fontSize="11">
        </s:Label>

    </s:Group>

	<!-- hit area -->
	<s:Rect left="-35" right="-38" top="0" bottom="0">
		<s:fill>
			<s:SolidColor alpha="0"/>
		</s:fill>
	</s:Rect>
</s:Skin>
