	<!-- layer 7: checkBox:ThreeStateCheckBox  -->
	<checkBoxes:ThreeStateCheckBox id="checkBox"
								   enabled="false" fontWeight="bold"
								   horizontalCenter="0" verticalCenter="0"
								   left="7" right="7"
								   selected="{ checked }" partial="{ partial }"/>
	
	
</s:GridItemRenderer>
